<% content_for :title do %>
	<title> Chime In :-) </title>
<% end %> 

<div id="home_body">
		<div id="navbar">	
		<ul>
			<li><a href="/home" id="nav">Home</a></li>
			<li><a href="/profile" id="nav">Profile</a></li>
			<li><a href="/allhumms" id="nav"> All Humms</a></li>
			<li><a href="/settings" id="nav">Settings</a></li>
			<li><a href="/signout" id="nav"><span>Sign Out</span></a></li>
		</ul>
		</div>


	<div class="textbox">
		<form id="humming"method="POST" action="/hummery">
			<textarea rows="7" cols="75" maxlength="150" name="boxy" class="newhumm" form="humming" placeholder="Chime in!"> </textarea>
		<input type="submit" value="Submit" id ="chime" onclick="changeText()"> 
		</form>
	</div>


<!-- this is where the active post would be located -->
	<div class="container">
		<div class="live_post">
			<p>
				<% @posts.each do |p| %>
				<h1> <%= p.user.username %> </h1>
				<p> <%= p.body %> </p> 
				<p> <%= p.created_at%> </p>
				<hr>
					<% end %>
			</p>
		</div>
	</div>

</div>
